<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- note to self, consider android:letterSpacing -->
    <style name="NavigationText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SettingsDarkThemeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="android:textColor">@color/settings_font</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsDarkThemeToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/main_bg</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="thumbTint">@color/settings_toggle_pip</item>
        <item name="trackTint">@color/settings_toggle_slider</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="SettingsOptionsLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="SettingsOptionsText">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/settings_font</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="SettingsOptionsIcon">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/main_bg</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="SearchItemSubtext">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/search_item_etc</item>
    </style>

    <style name="SearchLibraryInvertedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/search_inverted_button_bg</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textColor">@color/search_inverted_button_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerDataFields">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/player_secondary_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="PlayerTrackData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/player_main_text</item>
        <item name="android:text">placeholder</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="LibraryTabTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LibraryFragmentsNoResultText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/library_main_text</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginVertical">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>