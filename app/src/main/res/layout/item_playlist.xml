<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="196dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:background="@drawable/rounded_bg_8dp"

        android:src="@drawable/placeholder"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="160dp"
        android:layout_height="16dp"

        android:textSize="12sp"
        android:textColor="@color/library_ui_main"
        android:text="placeholder"
        android:fontFamily="@font/ys_display_regular"

        android:maxLines="1"
        android:ellipsize="end"

        android:layout_marginTop="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlistCover"
        />

    <TextView
        android:id="@+id/playlistTrackCount"
        android:layout_width="160dp"
        android:layout_height="16dp"

        android:textSize="12sp"
        android:textColor="@color/library_ui_main"
        android:text="placeholder"
        android:fontFamily="@font/ys_display_regular"

        android:maxLines="1"
        android:ellipsize="end"

        app:layout_constraintTop_toBottomOf="@+id/playlistTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>